<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- 
    PO password configuration beans.
    @author fritzberger 21.10.2010
-->

<beans>
    <bean id="PoPasswordQuality" class="at.workflow.webdesk.po.impl.PoPasswordQuality">
        <property name="minimalLength" value="0" />
        <property name="requiresUpperAndLowerCharacters" value="false" />
        <property name="minimalDigitsCount" value="0" />
        <property name="minimalSpecialCharactersCount" value="0" />
        <property name="validityDays" value="30" />    <!-- 30 is default, minimum is 1 (else any password check would fail), -1 is eternal validity! -->
        <property name="numberOfDifferingLatestPasswords" value="0" />
        
    </bean>

    <bean id="PoPasswordResetPolicy" class="at.workflow.webdesk.po.impl.PoPasswordResetPolicy">
        <!-- CAUTION: a default password of "" will NOT work as webdesk denies empty passwords. -->
        <property name="standardResetPassword" value="webdesk" />
        <property name="useUsernameAsStandardPassword" value="true" />
        <property name="forcePasswordChangeAfterResetToRandomPassword" value="false" />
        <property name="forcePasswordChangeAfterReset" value="true" />
    </bean>

    <bean id="PoPasswordResetMail" class="at.workflow.webdesk.po.impl.PoPasswordResetMail">
        
        <!-- Mails subject, can contain $variable expressions (Velocity) like templateBody below. -->
        <property name="subject">
            <value>Your webdesk password has been reset</value>
        </property>
        
        <!-- Default mail "from" address for password mails. -->
        <property name="senderMailAddress" value="office@workflow.at" />
        
        <!-- Overrides the person.email when given here. -->
        <property name="explicitRecipient" value="" />
        
        <!-- Mail body. -->
        <property name="templateBody">
            <!--
                CAUTION: do not use ${variable} here, use $variable,
                as Spring would substitute the first one (and fail)!
                Velocity can substitute both forms.
            -->
            <value>
Dear $person.firstName $person.lastName,

Your webdesk password has been reset, please change it as soon as possible!
Current is: $password

Sincerely,
Your webdesk administration
            </value>
        </property> 
        
    </bean>
    
</beans>
