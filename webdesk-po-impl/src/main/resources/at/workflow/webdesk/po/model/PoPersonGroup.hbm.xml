<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class table="PoPersonGroup" name="at.workflow.webdesk.po.model.PoPersonGroup">
    <cache usage="read-write" />
    <id name="UID" type="string" column="PERSONGROUP_UID" length="32">
      <generator class="uuid.hex" />
    </id>
    <many-to-one column="PERSON_UID" cascade="none" foreign-key="FK_PERSONGROUP_PERSON" lazy="false" not-null="false" name="person" />
    <many-to-one column="GROUP_UID" cascade="none" foreign-key="FK_PERSONGROUP_GROUP" lazy="false" not-null="false" name="group" />
    <property name="validfrom" not-null="true" type="timestamp" />
    <property name="validto" not-null="true" type="timestamp" />
  </class>
</hibernate-mapping>
