<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Declaration of specific Admin Actions -->
<beans>
	<bean name="PoRepairBrokenActionCaptions"
		class="at.workflow.webdesk.po.impl.adminactions.RepairBrokenActionCaptions">
		<property name="languageService">
			<ref bean="PoLanguageService" />
		</property>
		<property name="generalDbService">
			<ref bean="PoGeneralDbService" />
		</property>
	</bean>

	<bean name="PoEnforceConsistentPersonGroupOrgRelations"
		class="at.workflow.webdesk.po.impl.adminactions.EnforceConsistentPersonGroupOrgRelations">
		<property name="organisationService" ref="PoOrganisationService" />
	</bean>

	<bean name="PoEnforceSingleCostCenterPersonRelations"
		class="at.workflow.webdesk.po.impl.adminactions.EnforceSingleCostCenterPersonRelations">
		<property name="organisationService" ref="PoOrganisationService" />
		<property name="beanPropertyService" ref="PoBeanPropertyService" />
	</bean>

	<bean name="PoRefreshMenuStructureFoldernames"
		class="at.workflow.webdesk.po.impl.adminactions.RefreshMenuStructureFolderNames">
		<property name="organisationService" ref="PoOrganisationService" />
		<property name="menuService" ref="PoMenuService" />
	</bean>

	<bean name="PoInitializeAllowedActions"
		class="at.workflow.webdesk.po.impl.adminactions.InitializeAllowedActions">
		<property name="licenceInterceptor" ref="PoLicenceInterceptor" />
	</bean>

	<bean name="PoResetAllPasswords"
		class="at.workflow.webdesk.po.impl.adminactions.ResetAllPasswords">
		<property name="organisationService" ref="PoOrganisationService" />
		<property name="passwordService" ref="PoPasswordService" />
	</bean>

	<bean name="PoResetAllPasswordsToRandomAndSendMails"
		class="at.workflow.webdesk.po.impl.adminactions.ResetAllPasswordsToRandomAndSendMails"
		parent="PoResetAllPasswords">
	</bean>
	<bean name="PoDeactivateAllJobs"
		class="at.workflow.webdesk.po.impl.adminactions.DeactivateAllJobs">
		<property name="jobService" ref="PoJobService" />
	</bean>

	<bean name="MigrateOldMenuToNewMenu"
		class="at.workflow.webdesk.po.impl.adminactions.MigrateOldMenuToNewMenu">
		<property name="menuTreeService" ref="PoMenuTreeService" />
		<property name="organisationService" ref="PoOrganisationService" />
		<property name="menuService" ref="PoMenuService" />
	</bean>
	<!-- LUCENE ADMIN ACTIONS -->
	<bean name="PoCleanLuceneSearchIndex"
		class="at.workflow.webdesk.po.impl.adminactions.CleanLuceneSearchIndex">
	</bean>
	<bean name="RefreshLuceneSearchIndex"
		class="at.workflow.webdesk.po.impl.adminactions.RefreshLuceneSearchIndex">
	</bean>

</beans>