<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>at.workflow</groupId>
	<artifactId>wf-tools</artifactId>
	<version>1.4.0-SNAPSHOT</version>

    <!-- 
    <packaging>jar</packaging>
        fri_2012-09-11: commented out to enable test-jar builder plugin
     -->
    
    <name>Workflow Tools</name>

	<parent>
		<groupId>at.workflow.webdesk</groupId>
		<artifactId>webdesk-parent</artifactId>
		<version>26-SNAPSHOT</version>
		<relativePath>../../parent/pom.xml</relativePath>
	</parent>

	<scm>
		<connection>scm:svn:https://extranet.workflow.at/svn/wfrepos/webdesk/trunk/subprojects/wf-tools</connection>
	</scm>

    <!-- Build a test-jar for other modules that depend on it.
        fri_2012-09-11: commented out <packaging> for this -->
    <build>
        <plugins>
           <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-jar-plugin</artifactId>
               <version>2.2</version>
               <executions>
                 <execution>
                   <goals>
                     <goal>test-jar</goal>
                   </goals>
                 </execution>
               </executions>
           </plugin>
        </plugins>
    </build>
 
